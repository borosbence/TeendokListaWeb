@model IEnumerable<TeendokListaWeb.Models.feladat>

@{
    ViewBag.Title = "Feladatok";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Új létrehozása", "Letrehozas")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.szoveg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.letrehozas_datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teljesitve)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.felhasznalo.felhasznalonev)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cim)
        </td>
        <td>
            @Html.Raw(item.szoveg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.letrehozas_datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teljesitve)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.felhasznalo.felhasznalonev)
        </td>
        <td>
            @Html.ActionLink("Szerkesztés", "Szerkesztes", new { id=item.id }) |
            @Html.ActionLink("Részletek", "Reszletek", new { id=item.id }) |
            @Html.ActionLink("Törlés", "Torles", new { id=item.id })
        </td>
    </tr>
}

</table>
